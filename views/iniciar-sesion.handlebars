<main class="contenedor">
    {{#if exito}}
    <div class="alerta">{{exito}}</div>
    {{/if}}
    {{#if error}}
    <div class="error alerta">{{error}}</div>
    {{/if}}
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label for="">E-mail</label>
            {{#if email}}
                <input type="email" name="email" placeholder="Tu E-mail" value="{{email}}">
            {{else}}
                <input type="email" name="email" placeholder="Tu E-mail">
            {{/if}}
            
        </div>
        <div class="campo">
            <label for="">Password</label>
            <input type="password" name="password" placeholder="Tu Password">
        </div>
        <div class="campo acciones">
            <a href="/crear-cuenta">Ir a Registrar Usuario</a>
            <a href="/restablecer-password">Olvidé mi password</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar Sesión" class="btn btn-azul">
        </div>
    </form>
</main>