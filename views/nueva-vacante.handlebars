<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
        <H3>Información General</H3>
        <div class="campo">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" id="titulo" placeholder="Ej. Java Developer" required>
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" id="empresa" placeholder="Empresa que Contrata" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej. España o Remoto" required>
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" id="salario" placeholder="Ej. 500 USD" required>
        </div>
        <div class="campo">
            <label for="contrato" id="contrato">Contrato</label>
            <select name="contrato">
                <option value="" dissabled selected>-- Selecciona --</optio>
                <option value="freelance">Freelance</optio>
                <option value="completo">Tiempo Completo</optio>
                <option value="parcial">Tiempo Parcial</optio>
                <option value="proyecto">Por Proyecto</optio>
            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripción</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
        {{#each skills}}
            <li>{{this}}</li>
        {{/each}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>