<main class="contenedor">
    {{#if exito}}
        <div class="alerta">{{exito}}</div>
    {{/if}}
    {{#if error}}
        <div class="error alerta">{{error}}</div>
    {{/if}}
    <form action="/vacantes/nueva" method="POST" class="default-form">
        <H3>Información General</H3>
        <div class="campo">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" id="titulo" placeholder="Ej. Java Developer" value="{{datos.titulo}}" required>
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" id="empresa" placeholder="Empresa que Contrata" value="{{datos.empresa}}" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej. España o Remoto" value="{{datos.ubicacion}}" required>
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" id="salario" placeholder="Ej. 500 USD" value="{{datos.salario}}" required>
        </div>
        <div class="campo">
            <label for="contrato" id="contrato">Contrato</label>
            <input type="hidden" id="contr" value="{{datos.contrato}}">
            <select class="contrato" name="contrato">
                    <option value="" dissabled selected>-- Selecciona --</option>
                    <option value="freelance">Freelance</option>
                    <option value="completo">Tiempo Completo</option>
                    <option value="parcial">Tiempo Parcial</option>
                    <option value="proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripción</label>
            <input type="hidden" id="x" value="{{{datos.descripcion}}}" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <input type="hidden" id="seleccionadas" value="{{datos.skills}}">
        <ul class="lista-conocimientos">
        {{#each skills}}
            <li>{{this}}</li>
        {{/each}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>