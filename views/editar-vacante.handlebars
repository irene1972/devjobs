<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <H3>Información General</H3>
        <div class="campo">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" id="titulo" placeholder="Ej. Java Developer" value="{{vacante.titulo}}" required>
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" id="empresa" placeholder="Empresa que Contrata" value="{{vacante.empresa}}" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej. España o Remoto" value="{{vacante.ubicacion}}" required>
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" id="salario" placeholder="Ej. 500 USD" value="{{vacante.salario}}" required>
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <input type="hidden" value="{{vacante.contrato}}" id="contr">
            <select class="contrato" name="contrato">
                <option value="" dissabled>-- Selecciona --</option>
                <option value="freelance">Freelance</option>
                <option value="completo">Tiempo Completo</option>
                <option value="parcial">Tiempo Parcial</option>
                <option value="proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripción</label>
            <input type="hidden" id="x" value="{{{vacante.descripcion}}}" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <input type="hidden" value="{{vacante.skills}}" id="seleccionadas">
        <ul class="lista-conocimientos">
        {{#each skills}}
            <li>{{this}}</li>
        {{/each}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>