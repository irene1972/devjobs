<main class="contenedor">
    {{#if exito}}
        <div class="alerta">{{exito}}</div>
    {{/if}}
    {{#if error}}
        <div class="error alerta">{{error}}</div>
    {{/if}}
    <form action="/restablecer-password" method="POST" class="default-form">
        <div class="campo">
            <label for="">E-mail</label>
            {{#if email}}
                <input type="email" name="email" placeholder="Tu E-mail" value="{{email}}">
            {{else}}
                <input type="email" name="email" placeholder="Tu E-mail">
            {{/if}}
        </div>
        <div class="campo acciones">
            <a href="/iniciar-sesion">Iniciar Sesi√≥n</a>
            <a href="/crear-cuenta">Ir a Registrar Usuario</a>
        </div>
        <div class="campo">
            <input type="submit" value="Restablecer password" class="btn btn-azul">
        </div>
    </form>
</main>